<%
	var green = "#9AFE2E";
	var global_color = green;
%>
header{
	max-width: 100%;
	height: 15%;
	background-color: black;
	padding: 1%;
	color: white;
	display: flex;
	justify-content: space-around;
	align-items: center;
/* height final 17% */
}
header h1{
	margin: 0;
	font-family: San Francisco;
	font-weight: 400;
	font-size: 240%;
}
header img{
	width: auto;
	height : 13vh;
}
h2{
	margin:0;
	font-family: San Francisco;
	font-weight: 300;
	font-size: 160%;
	color: <%= global_color %>;
	text-align: center;
}
.page{
	height: 83%;
}
.page-nav{
	 height: 69.5%; 
width:100%;
/*Page with a navbar */
}
#nav{
	display: flex;
	align-items: center;
    text-align: left;
	height: 12%;
	padding-left: 4%;
}
/* height final 8% */
#nav .fa-bars{
	font-size: 180%;
	display: block;
}
#nav .closebtn{
	font-size: 260%;
	color: white;
	display: none;
}
#menu, .group{
display: none;
	padding: 2%;
}
#menu-step-back{
	font-size: 140%;
	color: white;
	display: none;
}
#menu-flex{
	display: flex;
	justify-content: space-around;
	flex-wrap: wrap;
	align-items: center;
  	transition: all 2s linear;
}
#menu a, 	.group a{
	color: white;
	text-decoration: none;
	display: block;
}
.menu-button{
	border-radius: 15px;
	text-align: center;
	font-family: San Francisco;
	font-weight: 300;
	font-size: 120%;
	padding-top: 5vh;
	height: 14vh;
	width: 22vh;
	margin-top: 5%;
  	transition: all 2s linear;
	flex-direction: row;
}
#nav .not_colored{
	border: 2px solid white;
	color: white;
}	
#nav .colored{
	border: 2px solid <%= global_color %>;
	color: <%= global_color %>;
}

.full-nav{
	border-top: solid <%= global_color %> 1px;
	background-color: black;
	min-height: 84.5%;
}
/*Specific*/

/* --Beginning Of Password Page-- */
.menu-button{
	cursor: pointer;
}
#right_block{
	display: none;
}
#password_page{
	height: 100%;
	display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
	min-height: inherit;
	overflow: hidden;
}
#password_page button{
	display: block;
	font-size: 2.8em;
	color: grey;
	background: 0;
	opacity: 1;
	border-radius: 50%;
	padding: 1%;
	height: 1.6em;
	width: 1.9em;
	font-weight: 200;
	margin: 2.5% 3% 2% 2.5%;
	border: 1px solid <%= global_color %>;
	-webkit-tap-highlight-color: <%= global_color %>;
}
#password_part div{
	display: flex;
	justify-content: space-around;
}
#password_state{
	height: 3vh;
	margin-top: 3%;
	margin-bottom: 3%;
	color: #D8D8D8;
	text-align: center;
	justify-content: space-around;
}
#zero_button_password button{
	height: 1.6em;
	width: 1.6em;
}
#delete_n{
	color: #D8D8D8;
	display: inline-block;
	margin-left: 10em;
	position: relative;
	top: -9vh;
}
/* --End Of Password Page-- */
